---
interface Props {
  entries: {
    date?: string;
    title: string;
    description: string;
  }[];
}

const { entries } = Astro.props;
---

{ /* This component MUST be wrapped within a relative parent for correct positioning! */ }
<div class="w-full h-full flex justify-center">
    {/* Vertical line */}
    <div class="absolute left-1/2 transform -translate-x-1/2 h-full w-0.5 bg-white
                sm:left-[calc(50%-10rem)]
                md:left-[calc(50%-15rem)]
                lg:left-[calc(50%-20rem)]
                xl:left-[calc(50%-25rem)]">
    </div>
  
  
    <div class="w-full max-w-4xl px-4 py-8">
            {/* Entry date */}
            {entries.map((entry, index) => (
            <div class="relative mb-8 flex items-center justify-start pl-20
            sm:justify-start md:justify-start lg:justify-start xl:justify-start">
            
            {entry.date && (
                <div class="absolute right-1/2 mr-6 text-white text-lg font-bold text-nowrap
                sm:right-[calc(50%+10rem)]
                md:right-[calc(50%+15rem)]
                lg:right-[calc(50%+20rem)]
                xl:right-[calc(50%+25rem)]">
                {entry.date}
            </div>
            )}
            

            {/* Circle */}
            <div class="absolute left-1/2 transform -translate-x-1/2 top-1/2 -translate-y-1/2
                w-4 h-4 rounded-full bg-white z-10
                sm:left-[calc(50%-10rem)]
                md:left-[calc(50%-15rem)]
                lg:left-[calc(50%-20rem)]
                xl:left-[calc(50%-25rem)]">
            </div>
            
            
            {/* Entry content */}
            <div class="min-w-2xl
                sm:w-1/2 sm:pl-0 sm:pr-10 sm:text-left">
                    <h3 class="text-2xl font-bold text-white mb-2">{entry.title}</h3>
                    <p class="text-gray-300">{entry.description}</p>
            </div>
        </div>
        ))}
    </div>
</div>

